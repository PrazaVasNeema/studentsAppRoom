<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/btnBlueBackground" />
            <stroke
                android:width="3dp"
                android:color="@color/btnBlueStroke" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="0dp"
                android:left="4dp"
                android:right="4dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:type="radial"
                android:endColor="@color/btnBlueBackground"
                android:centerColor="@color/colorPrimaryLight"
                android:startColor="@color/btnBlueBackground"
                />
            <stroke
                android:width="3dp"
                android:color="@color/btnRedStroke" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="0dp"
                android:left="4dp"
                android:right="4dp"
                android:top="0dp" />
        </shape>
    </item>
</selector>